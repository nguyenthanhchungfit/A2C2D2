<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.KhoiDongGameActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="244dp"
        android:layout_marginTop="16dp"
        android:text="@string/huong_dan"
        android:textColor="#ff0000"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="600dp"
        android:onClick="exitGuide"
        android:src="@android:drawable/btn_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="565dp"
        android:layout_height="267dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="296dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:paddingLeft="2dp"
                android:paddingRight="30dp"
                android:scrollbars="vertical"
                android:text="2 người chơi sẽ oẳn tù tì để giành quyền đi trước và sẽ đánh thay phiên nhau mỗi lượt. Cả 2 đều có 10s để suy nghĩ nếu hết giờ hệ thống sẽ tự đánh thay cho bạn. Khi có 1 người chơi có 5 kí hiệu liên tiếp theo hàng dọc, ngang chéo thì người chơi đó sẽ thắng và người còn lại sẽ thua với điều kiện không bị chặn 2 đầu."
                android:textColor="#333333"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>