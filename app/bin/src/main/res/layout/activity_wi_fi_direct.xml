<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WiFiDirectActivity"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/layoutGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:context="com.nguyenthanhchung.carop2p.activity.MainGameActivity">

        <FrameLayout
                android:id="@+id/fragmentPlayerChinh"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#4CAF50">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragmentBoardGame"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragmentPlayerBan"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#4CAF50">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragmentMainChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="235dp"
            android:layout_marginStart="70dp"

            >

        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragmentFriendChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="70dp"
            android:layout_marginVertical="235dp"
            />

        <ImageButton
            android:id="@+id/btnOpenEmotionBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/fragmentPlayerChinh"
            android:layout_marginStart="60dp"
            android:background="@null"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            app:srcCompat="@drawable/ic_open_emotion" />

        <ImageButton
            android:id="@+id/btnSendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/fragmentPlayerChinh"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            app:srcCompat="@drawable/ic_message" />

        <FrameLayout
            android:id="@+id/fragmentEmotionBoard"
            android:layout_width="227dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

        </FrameLayout>


    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        />

</LinearLayout>